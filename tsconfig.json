{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        // Raise error on expressions and declarations with an implied any type.
        "noImplicitAny": false,
        "moduleResolution": "node",
        // Generates corresponding .map file.
        "sourceMap": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "types": [ "node", "koa", "koa-bodyparser", "koa-router", "cookies", "chalk" ],
        // Do not emit outputs if any errors were reported.
        "noEmitOnError": true,
        "allowJs": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
