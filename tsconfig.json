{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "types": [ "node", "koa", "koa-bodyparser", "koa-router", "cookies", "chalk" ],
        "allowJs": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
